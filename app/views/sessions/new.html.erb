<h1>Log In</h1>

<% if flash[:notice] %>
  <%= flash[:notice]  %>
<% end %>

<br>

<%= form_for(:session, url: login_path) do |f| %>
  <table>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit "Log In" %></td>
    </tr>
  </table>
<% end %>

<p><%= link_to "Sign up", new_user_path %> if you do not have an account.</p>
